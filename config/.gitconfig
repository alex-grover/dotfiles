[github]
    user = alex-grover

[user]
    name = Alex Grover
    email = hello@alexgrover.me

[color]
    ui = auto

[credential]
    helper = osxkeychain

[push]
    default = current

[help]
    autocorrect = 1

[fetch]
    prune = true

[branch]
    autosetuprebase = always

[pull]
    rebase = true

[init]
    defaultBranch = main

[advice]
    addEmptyPathspec = false

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

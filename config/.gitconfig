[github]
    user = alex-grover

[user]
    name = Alex Grover
    email = hello@alexgrover.me
    signingkey = ~/.ssh/id_ed25519.pub

[color]
    ui = auto

[credential]
    helper = osxkeychain

[push]
    default = current
    followTags = true

[help]
    autocorrect = 1

[fetch]
    prune = true
    pruneTags = true
    all = true

[branch]
    autosetuprebase = always
    sort = -committerdate

[pull]
    rebase = true

[init]
    defaultBranch = main

[advice]
    addEmptyPathspec = false
    skippedCherryPicks = false

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = plain
    algorithm = histogram
    renames = true
    mnemonicPrefix = true

[commit]
    gpgsign = true
    verbose = true

[column]
    ui = auto

[tag]
    sort = version:refname

[rerere]
    enabled = true
    autoupdate = true

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[gpg]
    format = ssh

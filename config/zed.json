{
  "show_edit_predictions": false,
  "autosave": "on_focus_change",
  "auto_install_extensions": {
    "github-theme": true
  },
  "buffer_font_size": 14,
  "buffer_font_family": "MesloLGS Nerd Font",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "hour_format": "hour24",
  "project_panel": {
    "auto_fold_dirs": false,
    "auto_reveal_entries": false
  },
  "terminal": {
    "dock": "right",
    "line_height": "standard"
  },
  "theme": {
    "mode": "dark",
    "dark": "Github Dark Dimmed",
    "light": "Github Light"
  }
}
